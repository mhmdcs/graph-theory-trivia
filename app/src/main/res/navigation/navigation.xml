<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.graphtheorytrivia.TitleFragment"
        android:label="Graph Theoy Trivia"
        tools:layout="@layout/fragment_title" >
        <action
            android:id="@+id/action_titleFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.graphtheorytrivia.GameFragment"
        android:label="@string/graph_theory_title"
        tools:layout="@layout/fragment_game" />
    <fragment
        android:id="@+id/gameWonFragment"
        android:name="com.example.graphtheorytrivia.GameWonFragment"
        android:label="Well Done!"
        tools:layout="@layout/fragment_game_won" />
    <fragment
        android:id="@+id/gameOverFragment"
        android:name="com.example.graphtheorytrivia.GameOverFragment"
        android:label="You Failed :("
        tools:layout="@layout/fragment_game_over" />
</navigation>